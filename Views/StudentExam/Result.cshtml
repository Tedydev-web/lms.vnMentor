@model vnMentor.Models.ResultViewModel
@using vnMentor.Models
@using vnMentor.Resources
@{
    ViewBag.Title = Resource.YourExamResult;
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}

<section class="section mt-3">
    <div class="bg-white rounded p-3 p-lg-4 p-xl-5 shadow">
        <h2 class="fs-20 fw600 mb-4">@ViewBag.Title</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.ExamName, htmlAttributes: new { @class = "fw600" })</div>
                    <div>@Html.DisplayFor(model => model.ExamName, new { htmlAttributes = new { @class = "form-control d-block" } })</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.StudentName, htmlAttributes: new { @class = "fw600" })</div>
                    <div>@Html.DisplayFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control" } })</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.Passed, htmlAttributes: new { @class = "fw600" })</div>
                    <div>
                        @if (Model.Passed == true)
                        {
                            <span class="badge bg-success text-black fw500 fs-13">@Resource.Passed</span>
                        }
                        else
                        {
                            <span class="badge bg-danger fw500 fs-13">@Resource.Failed</span>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.ScoreToPass, htmlAttributes: new { @class = "fw600" })</div>
                    <div>@Model.ScoreToPass</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.YourScore, htmlAttributes: new { @class = "fw600" })</div>
                    <div>@Model.YourScore / @Model.TotalScore</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.AnsweredCorrect, htmlAttributes: new { @class = "fw600" })</div>
                    <div>@Model.AnsweredCorrect / @Model.TotalQuestions</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.StartDateTime, htmlAttributes: new { @class = "fw600" })</div>
                    <div class="datetimetext">@Model.StartDateTime</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.EndDateTime, htmlAttributes: new { @class = "fw600" })</div>
                    <div class="datetimetext">@Model.EndDateTime</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.TimeTaken, htmlAttributes: new { @class = "fw600" })</div>
                    <div>@Model.TimeTaken @Resource.Minutes</div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <a class="btn form-btn btn-secondary hover-boxshadow me-1" href="@Url.Action("pastexam","studentexam")">@Resource.BackToList</a>
            @if (Model.ReleaseAnswer == true)
            {
                <a class="btn form-btn btn-secondary hover-boxshadow me-1" href="@Url.Action("studentquestionanswer","result",new{eid = Model.ExamId})">@Resource.ReviewQuestionAndAnswer</a>
            }
            <span class="btn form-btn btn-primary hover-boxshadow cursor-pointer me-1" onclick="window.print()">@Resource.PrintResult</span>
        </div>
    </div>
</section>
